.head-height {
  height: 240rpx;
}

.head {
  display:flex;
  width: 100%;
  background-color: #15c261;
  align-items: center;
}

.login-button {
  opacity: 0; 
  width: 100%;
  position: fixed;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: fixed;
  background-color: #15c261;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333333;
  font-size: 42rpx;
  background-color: #15c261;
}
.jieshu {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #cdcdcd;
  border-radius: 30rpx;
  background: white;
  box-shadow: 10rpx 10rpx 10rpx #cdcdcd;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}